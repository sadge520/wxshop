/* pages/person/index.wxss */
.fff{
    background: #ffffff;
}
.module{
    margin-bottom:8px;
}
.header{
    justify-content:space-between;
    padding: 15px;
    align-items: center;
    border-bottom:1px solid #e0e0e0;
    background-color: #25B3FF;
}
.userinfo-avatar{
    width: 100rpx;
    height: 100rpx;
    margin: 15rpx;
    border-radius: 50%;
}

.userinfo-nickname{
    font-size: 16px;
    margin-left: 15px;
}
.memberinfo{
    font-size: 14px;
    float: right;
    padding-right:0px;
    margin-right: 0px;
}

/* 我的订单 */
.myorder {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}
.myorder-text {
  font-size: 17px;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.allorder-tex {
  font-size: 16px;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}


.state{
    width:100%;
    justify-content: space-around;
    padding: 10px 0;
}
.stateItem{
    padding:5px;
    box-sizing: border-box;
    font-size: 12px;
    font-family:iconfont;
    text-align: center;
    flex-direction: column;
    justify-content: space-around;
    display: flex;

}
.stateItem:before{
    font-size: 28px;
}
.option{
    position: relative;
    border-bottom:1rpx solid #e0e0e0;
    font-family:iconfont;
    padding:10px 0;
    margin-left:15px;
    font-size: 14px;
}

.module .option:last-child{
    border-bottom: none;
}
.option:before{
    position: absolute;
    right:15px;
    top:50%;
    width: 14px;
    height:14px;
    margin-top:-7px;
}
.optionTitle{
    font-family:"iconfont";
}
.optionTitle:before{
    font-size: 18px;
    margin-right: 10px;
}
.collect:before{
    color: #FA7558;
}
.record:before{
    color: #FFC324;
}
.address:before{
    color: #673ab7;
}
.idea:before{
    color: #0BD075;
}
.service:before{
    color: #25B3FF;
}
.technology:before{
    color: #9e9e9e;
}
/*menu list*/
.tableviewcell {
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #ddd;
	color: #666;
	background: white;
	display: flex;
	align-items: center;
}

/*icon*/
.tableviewcell image {
	width: 60rpx;
	height: 60rpx;
}

/*text*/
.tableviewcell text {
	font-size: 16px;
	margin-left: 10px;
}

/*button*/
.logout {
	margin: 30rpx;
}

/*order*/
.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;
  padding: 20rpx 0;
}

.order {
	width: 33.3%;
	text-align: center;
}

.order image {
	width: 90rpx;
	height: 90rpx;
}

.order text{
	display: block;
	font-size: 30rpx;
	color: #333;
}
/**index.wxss**/

.container {
  width: 100%;
  padding: 0;
  margin: 0;
  background-color: #fff;
}

/* 搜索导航栏 z-index：设置层叠样式，决定样式的位置是否在上层 */

.header {
  width: 100%;
  height: 25px;
  display: flex;
  flex-direction: row;
  position: fixed;
  background: #e8e8e8;
  top: 0;
  z-index: 10;
}

.scroll-container {
  padding-top: 25px;
  width: 100%;
}

/* 轮播图*/

.swiper-height {
  height: 120px;
}

.slide-image {
  width: 100%;
}

/*分类 */

.category {
  border-bottom: 1rpx solid #e0e0e0;
  overflow: hidden;
}

.category_item {
  float: left;
  width: 25%;
  text-align: center;
  overflow: hidden;
  height: 50px;
  margin: 5px 0;
}

.category_logo {
  width: 35px;
  height: 35px;
}

.category_item_btn {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 50px;
}

.category_item_btn text {
  font-size: 14px;
  color: #666;
}

/* 商品 */

.goods-panel {
  display: flex;
  flex-wrap: wrap;
}

.goods-panel .goods-item {
  width: 49%;
  height: 220px;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}

.goods-item.odd {
  border-right: 1px solid #e8e8e8;
}

.goods-item .goods {
  position: relative;
}

.goods {
  font-size: 14px;
  color: #262626;
  height: 180px;
  text-align: center;
}

.goods .goods-tag {
  position: absolute;
}

.goods .goods-image {
  width: 140px;
  height: 140px;
  padding: 10px 10px;
}

.goods .desc-wrapper {
  height: 2.5em;
  display: table;
}

.desc-wrapper .goods-desc {
  height: 2.5em;
  overflow: hidden;
  text-align: left;
  display: inline-block;
  vertical-align: middle;
  line-height: 1.25em;
  padding: 0 5px 0 10px;
}

.goods-item .operating {
  position: relative;
  display: flex;
  flex-direction: row;
  font-size: 11px;
  color: #e6324a;
  height: 40px;
  padding: 10px 20px 10px;
}

/* 商品 */

/********  产品列表 ******/

.product_title {
  height: 30px;
  line-height: 30px;
  text-align: left;
  font-size: 18px;
}

.product_list {
  overflow: hidden;
  padding-top: 5px;
}

.product_item {
  float: left;
  width: 50%;
}

.product_item_container {
  border: 1px solid #e8e8e8;
  border-radius: 5px;
  margin-left: 5px;
  position: relative;
}

.product_info {
  background: rgb(192, 255, 252);
}

.product_img {
  margin-top: 5px;
  width: 100%;
  height: 180px;
}

.product_name {
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
  margin: 5px;
}

.costAndAdd {
  margin: 5px;
  padding-bottom: 25px;
}

.product_cost {
  color: #ff8957;
  font-size: 18px;
  height: 30px;
  line-height: 30px;
  text-align: left;
}

.product_privil {
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
  font-size: 12px;
}

.addCart {
  width: 30px;
  height: 30px;
  /* background: url("../../images/icon_cart.png") 0 0 no-repeat; */
  background-size: 100% 100%;
  position: absolute;
  bottom: 25px;
  right: 5px;
}
